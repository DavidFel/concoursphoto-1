<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="fr.iut.domain.User" uses-template="simple"/>

    <cache alias="fr.iut.domain.Authority" uses-template="simple"/>

    <cache alias="fr.iut.domain.User.authorities" uses-template="simple"/>

    <cache alias="fr.iut.domain.PersistentToken" uses-template="simple"/>

    <cache alias="fr.iut.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="fr.iut.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="fr.iut.domain.Concours" uses-template="simple"/>

    <cache alias="fr.iut.domain.Concours.themes" uses-template="simple"/>

    <cache alias="fr.iut.domain.Photo" uses-template="simple"/>

    <cache alias="fr.iut.domain.Photo.userPhotoVotes" uses-template="simple"/>

    <cache alias="fr.iut.domain.Photo.userPhotoComments" uses-template="simple"/>

    <cache alias="fr.iut.domain.SiteUser" uses-template="simple"/>

    <cache alias="fr.iut.domain.Theme" uses-template="simple"/>

    <cache alias="fr.iut.domain.Theme.concours" uses-template="simple"/>

    <cache alias="fr.iut.domain.UserPhotoComment" uses-template="simple"/>

    <cache alias="fr.iut.domain.UserPhotoVote" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
